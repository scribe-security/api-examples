			"name": "Get Datasets",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var datasets = JSON.parse(responseBody).result;",
							"for (let i = 0; i < datasets.length; i++) {",
							"    postman.setEnvironmentVariable(\"dataset_\" + datasets[i].datasource_name.replace(/ /g,\"_\"), datasets[i].id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
